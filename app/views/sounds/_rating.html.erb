<script type="text/javascript">
  $(document).ready(function(){
    // Detect click on unique button
    $("#submit_int" + <%=sound.id%>).click(function(){
      // Grab number from associated number field
      rating = $("#number_input" + <%=sound.id%>).val();
      console.log(rating);
      $.post("/rate/" + <%=sound.id%>, rating);
  });
});

</script>

<% if current_user && current_user.can_vote_for?(sound) %>
  <input sound_id="<%=sound.id%>" id="number_input<%=sound.id%>" type="number" name="rating" min="1" max="3">
  <button class="submit_button" id="submit_int<%=sound.id%>" type="submit">Rate</button>
<% end %>