<div id="upload_box">Upload</div>
<div id="ui_container">UI</div>

<div class="page_container">

	<div id="pad_container"></div>

	<div class="sounds_container">
	  <div id="tag_cloud" class="small-block-grid-2">
	    <% tag_cloud Sound.tag_counts, %w[s m l] do |tag| %>
	      <div class="single_tags"><%= link_to tag.name, tag_path(tag.name), class: "tags_class" %></div>
	    <% end %>
	  </div>

	  <%= render "recent" %>

	  <div><%= button_to "Back to Profile", user_path(current_user), method: :get %></div>
  </div>
</div>

<script defer="defer">

	var stage = new Kinetic.Stage({
        container: 'pad_container',
        width: 943,
        height: 200
      });
      var layer = new Kinetic.Layer();
      var rectX = stage.getWidth() / 2 - 50;
      var rectY = stage.getHeight() / 2 - 25;

      var box = new Kinetic.Rect({
        x: rectX,
        y: rectY,
        width: 100,
        height: 50,
        fill: '#00D2FF',
        stroke: '#7DB48C',
        strokeWidth: 2,
        draggable: true
      });

      // add cursor styling
      box.on('mouseover', function() {
        document.body.style.cursor = 'pointer';
      });
      box.on('mouseout', function() {
        document.body.style.cursor = 'default';
      });

      layer.add(box);
      stage.add(layer);

</script>